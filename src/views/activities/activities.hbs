</head>
<body>
    {{>navigation}}
    <div class="container">
        <h2 class="text-center mt-2 mb-10">Actividades Registradas</h2>
        <div class="mt-5 mb-10">
            <p class="fs-4">Buscar por</p>
            <form action="" onsubmit="event.preventDefault()">
                <div class="row g-3">
                <div class="col-9">
                    <div class="form-floating">
                    <input type="text" class="form-control" id="nombreactividad" name="nombre" onkeyup="buscarAct()">
                    <label for="nombreactividad">Nombre</label>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-floating">
                    <select class="form-select" id="Categoria" name="categoria" aria-label="Floating label select example" onchange="buscarAct()">
                        <option value='"A","T"'selected>Todas</option>
                        <option value='"A"'>Alojamientos</option>
                        <option value='"T"'>Tours</option>
                    </select>
                    <label for="Categoria">Categoría</label>
                    </div>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="button" class="btn btn-primary" onclick="buscarAct()">Buscar</button>
                </div>
            </form>
        </div>
        <div class="mt-3">
            <a class="btn btn-success" role="button" href="/actividades/agregar"><i class="fas fa-plus"></i> Agregar actividad</a>
        </div>
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-3 justify-content-center" id="contenedorActividades">
            {{#each actividades}}
            <div class="card m-3" style="width: 18rem;">
                <img src="{{link}}" class="card-img-top" height="200px" alt="{{nombre}}">
                <div class="card-body">
                    <h5 class="card-title text-center">{{nombre}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted text-center">Categoría: {{tipo}}</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" role="button" href="/actividades/detalles/{{idactividades}}"><i class="far fa-eye"></i> Ver Todo</a>
                        <a class="btn btn-warning" role="button" href="/actividades/editar/{{idactividades}}"><i class="fas fa-edit"></i>Editar</a>
                        <button class="btn btn-danger" type="button" data-bs-toggle="modal" data-bs-target="#EliminarActividad{{idactividades}}" ><i class="fas fa-trash-alt"></i>Eliminar</button>
                        <div class="modal fade" id="EliminarActividad{{idactividades}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirmación de eliminación</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    ¿Está seguro que desea eliminar {{nombre}}?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <a role="button" class="btn btn-danger" href="/actividades/eliminar/{{idactividades}}">Eliminar</a>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
                <p class="fs-4 fst-italic fw-bold">No hay ninguna actividad registrada</p>
            {{/each}}
        </div>
        
    </div>
    <script src="/js/buscarActividades.js"></script>