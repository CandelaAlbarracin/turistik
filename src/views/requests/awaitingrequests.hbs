    <style> 
        th {
        cursor: pointer;
        }
    </style>
</head>
<body>
    {{>navigationAdm}}
    <div class="container">
        <h2 class="text-center mt-2 mb-10 fst-italic">Solicitudes Pendientes</h2>
        <div class="mt-5 mb-5">
        <form action="" id='buscador' onsubmit="event.preventDefault()">
            <input type="text" name="estadosolicitud" id="estadosolicitud" value="P" hidden>
            <div><h3>Buscar por:</h3></div>
            <div class="row g-3">
                <div class="col-md">
                    <div class="form-floating">
                    <input type="tel" class="form-control" id="nrosolicitud" name="nrosolicitud" onkeyup="buscarSolicitud()">
                    <label for="nrosolicitud">Nro de Solicitud</label>
                    </div>
                </div>

                <div class="col-md">
                    <div class="form-floating">
                    <input type="text" class="form-control" id="cuil" name="cuil" onkeyup="buscarSolicitud()">
                    <label for="cuil">CUIL</label>
                    </div>
                </div>

                <div class="col-md">
                    <div class="form-floating">
                    <input type="text" class="form-control" id="nombreapellido" name="nombreapellido" onkeyup="buscarSolicitud()">
                    <label for="nombreapellido" style="font-size: 12px;">Nombre y/o Apellido del Emprendedor</label>
                    </div>
                </div>

                <div class="col-md">
                    <div class="form-floating">
                    <input type="text" class="form-control" id="emprendimiento" name="nombreemprendimiento" onkeyup="buscarSolicitud()">
                    <label for="emprendimiento">Nombre del Emprendimiento</label>
                    </div>
                </div>
                
                <div class="col-md">
                    <div class="form-floating">
                    <select class="form-select" id="Categoria" name="categoria" aria-label="Floating label select example" onchange="buscarSolicitud()">
                        <option value='Todas'selected>Todas</option>
                        <option value='A'>Alojamientos</option>
                        <option value='T'>Tours</option>
                    </select>
                    <label for="Categoria">Categoría</label>
                    </div>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="button" class="btn btn-primary" onclick="buscarSolicitud()">Buscar</button>
                </div>
            
            </div>
        </form>
        </div> 
        <div id="error"></div>
        <div class="table-responsive">
        <table class="table table-hover" id="myTable">
            <thead class="text-center">
                <tr>
                    <th scope="col" onclick="sortTable(0, 'int')">Nro de Solicitud <i class="fas fa-exchange-alt" style="transform:rotate(90deg); color:dodgerblue"></i></th>
                    <th scope="col" onclick="sortTable(1, 'str')">CUIL <i class="fas fa-exchange-alt" style="transform:rotate(90deg); color:dodgerblue"></i></th>
                    <th scope="col" onclick="sortTable(2, 'str')">Nombre <i class="fas fa-exchange-alt" style="transform:rotate(90deg); color:dodgerblue"></i></th>
                    <th scope="col" onclick="sortTable(3, 'str')">Apellido <i class="fas fa-exchange-alt" style="transform:rotate(90deg); color:dodgerblue"></i></th>
                    <th scope="col" onclick="sortTable(4, 'str')">Nombre del Emprendimiento <i class="fas fa-exchange-alt" style="transform:rotate(90deg); color:dodgerblue"></i></th>
                    <th scope="col" onclick="sortTable(5, 'str')">Categoría <i class="fas fa-exchange-alt" style="transform:rotate(90deg); color:dodgerblue"></i></th>
                    <th scope="col">Detalles</th>
                </tr>
            </thead>
            <tbody class="text-center align-middle" id="cuerpoTabla">
                {{#each pendientes}}
                <tr>
                    <td scope="row" class="fw-bold">{{idemprendimiento}}</td>
                    <td>{{cuil}}</td>
                    <td>{{nombre}}</td>
                    <td>{{apellido}}</td>
                    <td>{{nombreemprendimiento}}</td>
                    <td>{{categoria}}</td>
                    <td><a role="button" class="btn btn-primary" href="/solicitudes/pendientes/{{idemprendimiento}}"><i class="fas fa-eye"></i> Ver más</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
    <script>
        const linkactivo=document.getElementById("SolicitudesPendientes")
        linkactivo.classList.add('active')
    </script>
    <script src="/js/buscarSolicitud.js"></script>
    <script src="/js/ordenarTabla.js"></script>